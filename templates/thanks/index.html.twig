{% extends 'base.html.twig' %}

{% block title %}Espace perso
{% endblock %}

{% block body %}

	<div class="container mt-5">
		<div class="row">
			<h2 class="col-md-6">Liste des remerciements</h2>
			<div class=" col-md-6 d-flex justify-content-end">
				<a href="{{ path('app_thanks_form')}}" class="btn btn-primary">Ajouter un remerciements</a>
			</div>
		</div>

		<table class="table table-striped table-hover shadow">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">De la part de :</th>
					<th scope="col">Pour :</th>
					<th scope="col">Message</th>
					<th scope="col">Envoy√© le</th>
				</tr>
			</thead>

			{% for thank in thanks %}

				<tbody>
					<tr>
						<th scope="row">{{ thank.id }}</th>
						<td><img class="avatar-small" src="{{ asset("assets/avatars/#{thank.fromWho.avatar}") }}" alt="avatar">
							{{ thank.fromWho.name }}
						</td>
						<td><img class="avatar-small" src="{{ asset("assets/avatars/#{thank.toWho.avatar}") }}" alt="avatar">
							{{ thank.toWho.avatar }}</td>
						<td>{{ thank.message }}</td>
						<td>{{ thank.createdAt|date('Y-m-d') }}</td>
					</tr>
				</tbody>
			{% endfor %}

		</div>

	{% endblock %}
