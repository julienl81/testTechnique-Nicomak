{% extends 'base.html.twig' %}

{% block title %}Espace perso{% endblock %}

{% block body %}
    <h1>Bienvenue sur ton espace</h1>

    <p>Listes des remerciements</p>

<div class="container">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">From</th>
      <th scope="col">To</th>
      <th scope="col">Message</th>
      <th scope="col">Envoy√© le</th>
    </tr>
  </thead>

  {% for thank in thanks %}

  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><img class="avatar-small" src="{{ asset("assets/avatars/#{thank.fromWho.avatar}") }}" alt="avatar"> {{ thank.fromWho.name }}  </td>
      <td><img class="avatar-small" src="{{ asset("assets/avatars/#{thank.toWho.avatar}") }}" alt="avatar"> {{ thank.toWho.avatar }}</td>
      <td>{{ thank.message }}</td>
      <td>{{ thank.createdAt|date('Y-m-d') }}</td>
    </tr>
  </tbody>
  {% endfor %}

</div>

{% endblock %}
